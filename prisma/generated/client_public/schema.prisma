// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client_public"
}

enum UserRole {
  USER
  ADMIN
}

model Users {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String
  image         String?
  phone         String?
  streetAddress String?
  postalCode    String?
  city          String?
  country       String?
  role          UserRole @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // orders        OrderProduct[]
  // accounts      Account[]
  // sessions      Session[]
}
